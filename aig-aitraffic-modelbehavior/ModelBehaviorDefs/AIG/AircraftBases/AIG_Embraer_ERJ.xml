<ModelBehaviors>
		<Include ModelBehaviorFile="Asobo\Generic\FX.xml"/>
		<Include ModelBehaviorFile="Asobo\Exterior.xml"/>
		<Include ModelBehaviorFile="AIG\Animations.xml"/>
		<Include ModelBehaviorFile="AIG\AnimationsComplex.xml"/>
		<Include ModelBehaviorFile="AIG\EngineEffects.xml"/>
		<Include ModelBehaviorFile="AIG\LandingFX.xml"/>
	
<Template Name="AIG_Embraer_ERJ_Common">

	<Component ID="Landing_Gear">
		<UseTemplate Name="AIG_Gear_Center_Template"/>
		<UseTemplate Name="AIG_Gear_Left_Template"/>
		<UseTemplate Name="AIG_Gear_Right_Template"/>
	</Component>

	<Component ID="Wheels">
		<UseTemplate Name="AIG_Wheel_Animation">
			<ANIM_NAME>c_tire_blurred_key</ANIM_NAME>
			<WHEEL_ID>0</WHEEL_ID>
			<RATE>10</RATE>
		</UseTemplate>
		<UseTemplate Name="AIG_Wheel_Animation">
			<ANIM_NAME>l_tire_blurred_key</ANIM_NAME>
			<WHEEL_ID>1</WHEEL_ID>
			<RATE>7</RATE>
		</UseTemplate>
		<UseTemplate Name="AIG_Wheel_Animation">
			<ANIM_NAME>r_tire_blurred_key</ANIM_NAME>
			<WHEEL_ID>2</WHEEL_ID>
			<RATE>7</RATE>
		</UseTemplate>
	</Component>

	<Component ID="Nosewheel_Steering">
		<UseTemplate Name="AIG_Nosewheel_Steering">
			<ANIM_NAME>custom_anim_C_WHEEL_LR</ANIM_NAME>
			<ANIM_SHARPNESS>30</ANIM_SHARPNESS>
		</UseTemplate>
	</Component>

	<Component ID="Spoilers">
		<UseTemplate Name="AIG_ERJ_Spoiler_L_key"/>
		<UseTemplate Name="AIG_ERJ_Spoiler_R_key"/>
	</Component>

	<Component ID="Rudder">
		<UseTemplate Name="AIG_Rudder_Deflection">
			<ANIM_NAME>Rudder</ANIM_NAME>
		</UseTemplate>
	</Component>
	
	<Component ID="ControlSurfaceDroop">
		<UseTemplate Name="AIG_ControlSurfacesDroop">
			<ANIM_NAME>elevator</ANIM_NAME>
		</UseTemplate>
	</Component>

	<Component ID="Engines">
		<UseTemplate Name="AIG_Engine_Jet">
			<ANIM_NAME>engine0</ANIM_NAME>
			<ENGINE_ID>1</ENGINE_ID>
		</UseTemplate>
		<UseTemplate Name="AIG_Engine_Jet">
			<ANIM_NAME>engine1</ANIM_NAME>
			<ENGINE_ID>2</ENGINE_ID>
		</UseTemplate>
	</Component>
	
	<Component ID="Engine_Visibility">
		<Component ID="Engine1">
			<Parameters Type="Override">
				<ENGINE_ID>1</ENGINE_ID>
				<NODE_PREFIX></NODE_PREFIX>
			</Parameters>
			<UseTemplate Name="AIG_Engine_Jet_Visibility_Template">
				<STILL_NODE_ID>Engine1_Still</STILL_NODE_ID>
				<SLOW_NODE_ID>Engine1_Slow</SLOW_NODE_ID>
				<BLURRED_NODE_ID>Engine1_Blur</BLURRED_NODE_ID>
			</UseTemplate>
		</Component>
		<Component ID="Engine2">
			<Parameters Type="Override">
				<ENGINE_ID>2</ENGINE_ID>
				<NODE_PREFIX></NODE_PREFIX>
			</Parameters>
			<UseTemplate Name="AIG_Engine_Jet_Visibility_Template">
				<STILL_NODE_ID>Engine2_Still</STILL_NODE_ID>
				<SLOW_NODE_ID>Engine2_Slow</SLOW_NODE_ID>
				<BLURRED_NODE_ID>Engine2_Blur</BLURRED_NODE_ID>
			</UseTemplate>
		</Component>
	</Component>

	<Component ID="Flaps">
		<UseTemplate Name="AIG_Flaps">
			<ANIM_NAME>Flaps</ANIM_NAME>
			<FLAP_TO_DEGREES>20</FLAP_TO_DEGREES>
			<FLAP1_SPEED>140</FLAP1_SPEED>
			<FLAP1_DEGREES>100</FLAP1_DEGREES>
			<FLAP2_SPEED>160</FLAP2_SPEED>
			<FLAP2_DEGREES>49</FLAP2_DEGREES>
			<FLAP3_SPEED>180</FLAP3_SPEED>
			<FLAP3_DEGREES>40</FLAP3_DEGREES>
			<FLAP4_SPEED>200</FLAP4_SPEED>
			<FLAP4_DEGREES>20</FLAP4_DEGREES>
		</UseTemplate>
    </Component>

	<Component ID="Light_Visibility">
		<Component ID="Logo_Lights">
			<UseTemplate Name="AIG_Logolight_Visibility">
				<NODE_ID>LIGHT_Logo_left</NODE_ID>
			</UseTemplate>
			<UseTemplate Name="AIG_Logolight_Visibility">
				<NODE_ID>LIGHT_Logo_right</NODE_ID>
			</UseTemplate>
		</Component>
		<Component ID="NoseGear_Landing_Lights">
			<UseTemplate Name="AIG_Landinglight_NoseGear_Visibility">
				<NODE_ID>LIGHT_Landing_gear</NODE_ID>
			</UseTemplate>
		</Component>
	</Component>
	
	<Component ID="Effects">
		<UseTemplate Name="AIG_TwinEngineJet_Effects"/>
		<UseTemplate Name="AIG_APU_Heat"/>
		<UseTemplate Name="AIG_LandingFX"/>
	</Component>

	<Component ID="Fuselage_DimCabin">
		<UseTemplate Name="AIG_Fuselage_DimCabin">
			<NODE_ID>fuselage</NODE_ID>
			<TIME_START>26100</TIME_START>
			<TIME_END>80100</TIME_END>
		</UseTemplate>
	</Component>

</Template>

<Template Name="AIG_Embraer_ERJ_Reverse_Thrust">
	<Component ID="Reverse_Thrust">
		<UseTemplate Name="AIG_Reverse_Thrust">
			<ANIM_NAME>Reverser</ANIM_NAME>
		</UseTemplate>
	</Component>
</Template>

</ModelBehaviors>